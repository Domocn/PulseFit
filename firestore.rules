rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(uid) {
      return isSignedIn() && request.auth.uid == uid;
    }

    // User profiles
    match /users/{userId} {
      allow read: if isSignedIn();
      allow write: if isOwner(userId);

      match /friends/{friendId} {
        allow read: if isOwner(userId);
        allow write: if isOwner(userId);
      }
    }

    // Friend requests
    match /friendRequests/{requestId} {
      allow read: if isSignedIn() && (
        resource.data.fromUid == request.auth.uid ||
        resource.data.toUid == request.auth.uid
      );
      allow create: if isSignedIn() && request.resource.data.fromUid == request.auth.uid;
      allow update: if isSignedIn() && (
        resource.data.fromUid == request.auth.uid ||
        resource.data.toUid == request.auth.uid
      );
      allow delete: if isSignedIn() && (
        resource.data.fromUid == request.auth.uid ||
        resource.data.toUid == request.auth.uid
      );
    }

    // Shared workouts
    match /sharedWorkouts/{workoutId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && request.resource.data.uid == request.auth.uid;
      allow update, delete: if isSignedIn() && resource.data.uid == request.auth.uid;
    }

    // Groups
    match /groups/{groupId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && request.resource.data.adminUid == request.auth.uid;
      allow update: if isSignedIn() && resource.data.adminUid == request.auth.uid;
      allow delete: if isSignedIn() && resource.data.adminUid == request.auth.uid;

      match /members/{memberId} {
        allow read: if isSignedIn();
        allow create: if isSignedIn();
        allow delete: if isSignedIn() && (
          request.auth.uid == memberId ||
          get(/databases/$(database)/documents/groups/$(groupId)).data.adminUid == request.auth.uid
        );
      }

      match /events/{eventId} {
        allow read: if isSignedIn();
        allow write: if isSignedIn();
      }

      match /challenges/{challengeId} {
        allow read: if isSignedIn();
        allow write: if isSignedIn();
      }

      match /stats/{statId} {
        allow read: if isSignedIn();
        allow write: if isSignedIn();
      }
    }

    // Accountability contracts
    match /accountabilityContracts/{contractId} {
      allow read: if isSignedIn() && request.auth.uid in resource.data.participants;
      allow create: if isSignedIn() && request.auth.uid in request.resource.data.participants;
      allow update: if isSignedIn() && request.auth.uid in resource.data.participants;

      match /weekly/{weekId} {
        allow read, write: if isSignedIn() && request.auth.uid in
          get(/databases/$(database)/documents/accountabilityContracts/$(contractId)).data.participants;
      }
    }

    // Body double sessions
    match /activeSessions/{sessionId} {
      allow read: if isSignedIn();
      allow write: if isOwner(sessionId);
    }
  }
}
